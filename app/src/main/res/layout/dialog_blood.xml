<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/bt_uiborderrr1"
        android:gravity="center_horizontal"
        android:foregroundGravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialog_blood_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="90dp"
            />
        <EditText
            android:id="@+id/dialog_blood_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Quantity blood"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/dialog_blood_edit"
            android:padding="20dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bt_uisquare1"
            android:text="Edit"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="start" />

    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_blood_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_round"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />
    </RelativeLayout>