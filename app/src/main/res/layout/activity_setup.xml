<EditText
    android:id="@+id/setup_full_name"
    android:layout_below="@+id/setup_profile_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bt_uiborderrr"
    android:drawableLeft="@drawable/name"
    android:ems="10"
    android:hint="full name"
    android:inputType="textMultiLine"
    android:padding="14dp" />

<EditText
    android:id="@+id/setup_cin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/setup_full_name"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bt_uiborderrr"
    android:drawableLeft="@drawable/country"
    android:ems="10"
    android:hint="CIN"
    android:inputType="textMultiLine"
    android:padding="14dp" />
<EditText
    android:id="@+id/setup_telephone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/setup_cin"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bt_uiborderrr"
    android:drawableLeft="@drawable/country"
    android:ems="10"
    android:hint="Telephone"
    android:inputType="textMultiLine"
    android:padding="14dp" />
<EditText
        android:id="@+id/setup_categorie_sang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_telephone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bt_uiborderrr"
        android:drawableLeft="@drawable/country"
        android:ems="10"
        android:hint="Categorie sang"
        android:inputType="textMultiLine"
        android:padding="14dp" />
<EditText
        android:id="@+id/setup_ville"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_categorie_sang"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bt_uiborderrr"
        android:drawableLeft="@drawable/country"
        android:ems="10"
        android:hint="Ville"
        android:inputType="textMultiLine"
        android:padding="14dp" />
<EditText
        android:id="@+id/setup_adresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_ville"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bt_uiborderrr"
        android:drawableLeft="@drawable/country"
        android:ems="10"
        android:hint="Adresse"
        android:inputType="textMultiLine"
        android:padding="14dp" />
<Button
    android:id="@+id/setup_information_button"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/setup_adresse"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:background="@drawable/bt_uisquare"
    android:padding="14dp"
    android:text="Save"
    android:textColor="@android:color/background_light"
    android:textSize="20sp"
    android:textStyle="bold" />

</RelativeLayout>